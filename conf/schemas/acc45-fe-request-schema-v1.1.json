{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "ACC45 JSON Request Schema",
	"type": "object",
	"properties": {
		"cashAccountStatementRequest": {
			"type": "object",
			"properties": {
				"requestCommon": {
					"type": "object",
					"properties": {
						"originatingSystem": {
							"type": "string",
							"minLength": 1,
							"maxLength": 32
						},
						"receiptDate": {
							"type": "string",
							"pattern": "^[0-9]{4}-([0][1-9]|[1][0-2])-([0][1-9]|[1-2][0-9]|[3][0-1])T([0-1][0-9]|[2][0-3]):[0-5][0-9]:[0-5][0-9]Z$",
							"format": "date-time"
						},
						"acknowledgementReference": {
							"type": "string",
							"minLength": 1,
							"maxLength": 32
						}
					},
					"required": [
						"originatingSystem",
						"receiptDate",
						"acknowledgementReference"
					],
					"additionalProperties": false
				},
				"requestDetail": {
					"type": "object",
					"properties": {
						"eori": {
							"description": "EORI",
							"type": "string",
							"minLength": 1,
							"maxLength": 17,
							"pattern": "^([A-Z]{2}[0-9A-Z]+)$"
						},
						"can": {
							"description": "CAN",
							"type": "string",
							"minLength": 1,
							"maxLength": 11
						},
						"dateFrom": {
							"description": "DateFrom",
							"$ref": "#/definitions/date_type"
						},
						"dateTo": {
							"description": "DateTo",
							"$ref": "#/definitions/date_type"
						}
					},
					"required": [
						"eori",
						"can",
						"dateFrom",
						"dateTo"
					],
					"additionalProperties": false
				}
			},
			"required": [
				"requestCommon",
				"requestDetail"
			],
			"additionalProperties": false
		}
	},
	"required": [
		"cashAccountStatementRequest"
	],
	"additionalProperties": false,
	"definitions": {
		"date_type": {
			"type": "string",
			"pattern": "^\\d{4}\\-(0?[1-9]|1[012])\\-(0?[1-9]|[12][0-9]|3[01])$"
		}
	}
}