{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "ACC44 JSON Request Schema",
	"type": "object",
	"properties": {
		"cashAccountTransactionSearchRequest": {
			"type": "object",
			"properties": {
				"requestCommon": {
					"type": "object",
					"properties": {
						"originatingSystem": {
							"type": "string",
							"minLength": 1,
							"maxLength": 32
						},
						"receiptDate": {
							"type": "string",
							"pattern": "^[0-9]{4}-([0][1-9]|[1][0-2])-([0][1-9]|[1-2][0-9]|[3][0-1])T([0-1][0-9]|[2][0-3]):[0-5][0-9]:[0-5][0-9]Z$",
							"format": "date-time"
						},
						"acknowledgementReference": {
							"type": "string",
							"minLength": 1,
							"maxLength": 32
						}
					},
					"required": [
						"originatingSystem",
						"receiptDate",
						"acknowledgementReference"
					],
					"additionalProperties": false
				},
				"requestDetail": {
					"type": "object",
					"properties": {
						"can": {
							"description": "CAN",
							"type": "string",
							"minLength": 1,
							"maxLength": 11
						},
						"ownerEORI": {
							"type": "string",
							"minLength": 1,
							"maxLength": 17,
							"pattern": "[A-Z]{2}[0-9A-Z]+"
						},
						"searchType ": {
							"description": "Possible Values D - Declaration; P â€“ Payments ",
							"type": "string",
							"minLength": 1,
							"maxLength": 1,
							"enum": [
								"P",
								"D"
							]
						},
						"declarationDetails": {
							"description": "Declaration Details. Mandatory when the searchType is - D",
							"type": "object",
							"properties": {
								"paramName": {
									"description": "Possible values : MRN and UCR. Either MRN or UCR should present but not both at the same time",
									"type": "string",
									"minLength": 1,
									"maxLength": 3,
									"enum": [
										"MRN",
										"UCR"
									]
								},
								"paramValue": {
									"description": "Param Value",
									"type": "string",
									"minLength": 1,
									"maxLength": 35
								}
							},
							"required": [
								"paramName",
								"paramValue"
							]
						},
						"cashAccountPaymentDetails": {
							"description": "Cash Account Payment Details. Mandatory when the searchType is - P",
							"type": "object",
							"properties": {
								"amount": {
									"description": "Amount",
									"type": "number",
									"minimum": -99999999999.99,
									"maximum": 99999999999.99,
									"multipleOf": 0.01
								},
								"dateFrom": {
									"description": "DateFrom",
									"$ref": "#/definitions/date_type"
								},
								"dateTo": {
									"description": "DateTo",
									"$ref": "#/definitions/date_type"
								}
							},
							"required": [
								"amount"
							]
						}
					},
					"required": [
						"can",
						"ownerEORI",
						"searchType "
					],
					"additionalProperties": false
				}
			},
			"required": [
				"requestCommon",
				"requestDetail"
			],
			"additionalProperties": false
		}
	},
	"required": [
		"cashAccountTransactionSearchRequest"
	],
	"additionalProperties": false,
	"definitions": {
		"date_type": {
			"type": "string",
			"format": "date"
		}
	}
}
